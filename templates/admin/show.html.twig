{% extends 'base.html.twig' %}

{% block title %}
	{{ car.name|capitalize }}
{% endblock %}

{% block body %}
<div class="container">

	<h1 class="mt-4">
		{{ car.name|capitalize}}
	</h1>

	<a class="mt-4" href="{{ path('index') }}">back to the cars list</a>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ car.id }}
				</td>
			</tr>
			<tr>
				<th>Seats</th>
				<td>{{ car.nbSeats }}</td>
			</tr>
			<tr>
				<th>Doors</th>
				<td>{{ car.nbDoors }}</td>
			</tr>
			<tr>
				<th>Name</th>
				<td>{{ car.name }}</td>
			</tr>
			<tr>
				<th>Cost</th>
				<td>{{ car.cost }}</td>
			</tr>
			<tr>
				<th>Image</th>
				<td>{{ car.image }}</td>
			</tr>
			<tr>
				<th>Creation date</th>
				<td>{{ car.createdAt ? car.createdAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
		</tbody>
	</table>

	<form action="{{ path('edit', {'id': car.id}) }}" method="get">
		<button type="submit" class="btn btn-primary" style="width:99.49px;" >Edit</button>
    </form>

	{{ include('admin/_delete_form.html.twig') }}
</div>
{% endblock %}
