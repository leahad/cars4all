<div class="col-7 col-lg-5 col-xl-4">
	<div class="card h-100 text-center mt-4" style="width: 16rem">

		<img class="card-img-top" src="{{ car.image }}" alt="Card image cap">
		
		<div class="card-body">
			<h5 class="card-title">{{ car.name }}</h5>
		</div>

		<ul class="list-group list-group-flush">
			<li class="list-group-item">
				{{ car.category.name|capitalize }}
			</li>
			<li class="list-group-item">
				{{ car.nbSeats }}
				Seats</li>
			<li class="list-group-item">
				{{ car.nbDoors }}
				Doors</li>
			<li class="list-group-item">
				{{ car.cost|round(0, 'floor')}}â‚¬
			</li>
		</ul>

		<div class="card-body">
			<a href="{{ path('show', {'id': car.id}) }}">Buy</a>
		</div>
	
	</div>
</div>
